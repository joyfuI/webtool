{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": false
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "attributePosition": "auto",
    "bracketSpacing": true,
    "expand": "never",
    "useEditorconfig": true
  },
  "linter": {
    "enabled": true,
    "domains": {
      "next": "all",
      "project": "none",
      "react": "all"
    },
    "rules": {
      "recommended": true,
      "correctness": {
        "noReactPropAssignments": "error",
        "noNodejsModules": "error",
        "noUndeclaredVariables": "error",
        "useImportExtensions": "off"
      },
      "nursery": {
        "noUnresolvedImports": "off"
      },
      "performance": {
        "noBarrelFile": "error",
        "noDelete": "error",
        "noNamespaceImport": "error",
        "noReExportAll": "error",
        "useTopLevelRegex": "error"
      },
      "style": {
        "noCommonJs": "error",
        "noNamespace": "error",
        "useBlockStatements": "error",
        "useConsistentCurlyBraces": "error",
        "useFragmentSyntax": "error"
      },
      "suspicious": {
        "noConsole": "warn",
        "noEmptyBlockStatements": "warn"
      }
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              [
                "next",
                "next/**"
              ],
              [
                "react",
                "react-dom/**"
              ],
              ":PACKAGE:",
              ":BLANK_LINE:",
              ":ALIAS:",
              ":BLANK_LINE:",
              ":PATH:"
            ]
          }
        },
        "useSortedAttributes": "on",
        "useSortedProperties": "on"
      }
    }
  },
  "javascript": {
    "jsxRuntime": "transparent",
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSameLine": false
    },
    "linter": {
      "enabled": true
    },
    "assist": {
      "enabled": true
    }
  },
  "json": {
    "formatter": {
      "enabled": false
    },
    "linter": {
      "enabled": true
    },
    "assist": {
      "enabled": true
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    },
    "formatter": {
      "enabled": true,
      "quoteStyle": "single"
    },
    "linter": {
      "enabled": true
    },
    "assist": {
      "enabled": true
    }
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  }
}
